<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/orange"
    tools:context=".Faclog">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="156dp"
            android:layout_height="94dp"
            android:layout_alignEnd="@+id/button_sign_in"
            android:layout_alignParentTop="true"
            android:layout_marginTop="63dp"
            android:background="@drawable/contac_fac" />

        <EditText
            android:id="@+id/fusername"
            android:layout_width="199dp"
            android:layout_height="52dp"
            android:layout_alignBottom="@+id/imageView3"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:hint=" username"
            android:inputType="textEmailAddress"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/fpass"
            android:layout_width="200dp"
            android:layout_height="41dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="188dp"
            android:ems="10"
            android:hint=" password"
            android:inputType="textPassword"
            android:textSize="16sp" />


        <Button
            android:id="@+id/button_sign_in"
            android:layout_width="168dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="120dp"
            android:onClick="fbuttonlog"
            android:text="Login" />

        <TextView
            android:id="@+id/tvReg"
            android:layout_width="133dp"
            android:layout_height="33dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="54dp"
            android:onClick="facRegister"
            android:text="Register here"
            android:textColor="#fddfd919"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="146dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="94dp" />
    </RelativeLayout>

</LinearLayout>